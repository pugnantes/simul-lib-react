{
  "compilerOptions": {
    "baseUrl": ".", // Set the base URL to your project's root directory
    "paths": {
      "lib-react-dxc": ["node_modules/lib-react-dxc/dist/types/index"]
    },
    "sourceRoot": "./src",
    "rootDir": "./src", // anche senza
    "target": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ES2020",
    "declaration": true,
    "declarationDir": "dist/types", // types
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "emitDeclarationOnly": true,
    "noUncheckedIndexedAccess": true,
  },
  "include": [
    "src",
    "types"
  ],
  // "include": ["src/**/*"],
  // "exclude": ["dist", "node_modules", "rollup.config.js", "src/**/*.test.tsx"]
}
